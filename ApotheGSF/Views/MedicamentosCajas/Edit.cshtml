@model ApotheGSF.Models.MedicamentosCajas

@{
    ViewData["Title"] = "Edit";
}

<div class="form-group row">
    <div class="form-group col-sm-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-8">
                <div class="card">
                    <div class="card-header text-center" style="background-color:#994400;">
                        <h3 class="display-8" style="color:white;"><i class="fas fa-store"></i>&nbsp;Modificar MedicamentosCajas</h3>
                    </div>

                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="form-group">Medicamento:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-capsules"></i></span>
                                    </div>
                                    <input type="text" readonly class="form-control" value="@ViewBag.MedicamentosId" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="control-label">Unidades:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-box"></i></span>
                                    </div>
                                    <input asp-for="CantidadUnidad" class="form-control" />
                                </div>
                                <span asp-validation-for="CantidadUnidad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="control-label">Fecha de Adquisición:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    </div>
                                    <input asp-for="FechaAdquirido" class="form-control" />
                                </div>
                                <span asp-validation-for="FechaAdquirido" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label class="control-label">Fecha de Vencimiento:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    </div>
                                    <input asp-for="FechaVencimiento" class="form-control" />
                                </div>
                                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center" style="background-color:#994400;">
                        <input type="hidden" asp-for="MedicamentoId"/>
                        <input type="hidden" asp-for="CajaId" />
                        <button type="submit" value="Modificar" class="btn" style="background-color:#008F00;color:white;"><i class="fas fa-save"></i>&nbsp;Guardar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-2">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
