@model ApotheGSF.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-7">
        <div class="card">
            <div class="card-header text-center" style="background-color:#006699 ;">
                <h3 class="display-8" style="color:white;"><i class="fas fa-user"></i>&nbsp;Crear Usuario</h3>
            </div>
            <!--datos-->
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="Nombre" class="col-form-label">Nombre:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre">
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label for="Apellido" class="col-form-label">Appellido:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" asp-for="Apellido" class="form-control" placeholder="Apellido">
                        </div>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="Telefono" class="col-form-label">Teléfono:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                            </div>
                            <input type="tel" asp-for="Telefono" class="form-control" placeholder="___-____-____">
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label for="Cedula" class="col-form-label">Cédula:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-id-card"></i></span>
                            </div>
                            <input type="text" asp-for="Cedula" class="form-control" placeholder="___-_______-_">
                        </div>
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="FechaNacimiento" class="col-form-label">Fecha de Nacimiento:</label>
                        <div class="input-group prepend">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                            <input type="date" asp-for="FechaNacimiento" class="form-control datetimepicker-input">
                        </div>
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label for="Direccion" class="col-form-label">Dirección:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-address-book"></i></span>
                            </div>
                            <input type="text" asp-for="Direccion" class="form-control" placeholder="Dirección">
                        </div>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="Email" class="col-form-label">Email:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            </div>
                            <input class="form-control" asp-for="Email" type="email" placeholder="Example@Something.com">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label for="NombreUsuario" class="col-form-label">Nombre de Usuario:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input class="form-control" asp-for="Usuario" type="text" placeholder="Nombre Usuario">
                        </div>
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="Contrasena" class="col-form-label">Contraseña:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            </div>
                            <input class="form-control" asp-for="Password" type="password" placeholder="Contraseña">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">Confirmar Contraseña:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            </div>
                            <input class="form-control" asp-for="ConfirmarPassword" type="password" placeholder="...">
                        </div>
                        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        <label class="col-form-label" for="Roles">Rol:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <select class="form-control" asp-for="Rol" placeholder="Seleccione un Rol">
                                <option value="">Seleccione un Rol</option>
                                <option value="Administrador">Administrador</option>
                                <option value="Comprador">Comprador</option>
                                <option value="Vendedor">Vendedor</option>
                            </select>
                        </div>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <!--Fin datos-->
            </div>
            <div class="card-footer text-center" style="background-color:#006699 ;">
                <!--Botones-->
                <button class="btn" type="reset" style="background-color:white;color:#494949;"><i class="fas fa-file"></i>&nbsp;Nuevo</button>
                <button class="btn" type="submit" style="background-color:white;color:#008F00;"><i class="fas fa-save"></i>&nbsp;Guardar</button>
                <a class="btn" style="background-color:white;color:red;" asp-controller="Home" asp-action="Index" type="button"><i class="fas fa-times"></i>&nbsp;Cancelar</a>
                <!--Fin Botones-->
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
	}
