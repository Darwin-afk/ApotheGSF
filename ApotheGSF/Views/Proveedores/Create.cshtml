@model ApotheGSF.Models.Proveedores

@{
    ViewData["Title"] = "Create";
}

<div class="form-group row">
    <div class="form-group col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-8">
                <div class="card">
                    <div class="card-header text-center" style="background-color: lightgreen;">
                        <h3 class="display-8">Create Proveedor</h3>
                    </div>
                    <!--datos-->
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Codigo" class="col-form-label">Código</label>
                            </div>                            
                            <div class="col-sm-8 row">
                                <div class="col-sm-10">
                                    <input asp-for="Codigo" class="form-control" 
                                    placeholder="0">
                                </div>
                                <div class="col-sm-2">
                                    <button class="btn btn-primary" type="button">Buscar</button>
                                </div>                                
                            </div>
                        </div> 

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Nombre" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Nombre" class="form-control" 
                                placeholder="Nombre">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="RNC" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="RNC" class="form-control" placeholder="RNC">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Telefono1" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input type="tel" class="form-control" asp-for="Telefono1"
                                placeholder="___-____-____">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Telefono2" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input type="tel" class="form-control" asp-for="Telefono2"
                                placeholder="___-____-____">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Fax" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Fax" class="form-control"
                                placeholder="Fax" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Direccion" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" asp-for="Direccion" >
                            </div>
                        </div>                        

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="Email" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Email" class="form-control" type="email" class="form-control" >
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label asp-for="TerminosdePago" class="col-form-label">Terminos de Pagos</label>
                            </div>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="TerminosdePago" class="form-control"
                                    placeholder="Terminos">
                            </div>                            
                        </div>

                   
   
                        <!--Fin datos-->
                    </div>
                    <div class="card-footer text-center" style="background-color: lightgreen ;">
                        <!--Botones-->
                        <button class="btn btn-secondary" type="button">Nuevo</button>
                        <button class="btn btn-primary" type="submit">Guardar</button>
                        <a class="btn btn-danger" href="FrontEnd.html" type="button">Cerrar</a>
                        <!--Fin Botones-->
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-2">
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
