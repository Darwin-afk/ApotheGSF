@model ApotheGSF.ViewModels.FacturaViewModel

@{
    ViewData["Title"] = "Details";
    int i = 1;
}

<h3 class="text-center"><i class="fas fa-list"></i>&nbsp;Detalle Factura&nbsp<i class="fas fa-list"></i></h3>

<div class="container shadow-lg p-3 rb-5 bg-light rounded col-md-8">
    <div class="card">
        <div class="card-header text-center" style="background-color:#E8E8E8">
            <h3>Información de la Factura</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Creado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Creado)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CreadoNombreUsuario)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CreadoNombreUsuario)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Modificado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Modificado)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ModificadoNombreUsuario)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ModificadoNombreUsuario)
                </dd>
            </dl>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Nombre Medicamento
                        </th>
                        <th>
                            Tipo Cantidad
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MedicamentosDetalle)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @item.NombreMedicamento
                            </td>
                            <td>
                                @if (item.TipoCantidad == 1)
                                {
                                    @:Cajas
                                }
                                else
                                {
                                    @:Unidades
                                }
                            </td>
                            <td>
                                @item.Cantidad
                            </td>
                            <td>
                                @item.Precio
                            </td>
                            <td>
                                @item.Total
                            </td>
                        </tr>
                        i = i + 1;
                    }
                </tbody>
            </table>
            <hr />
            <dl class="row text-end">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.SubTotal)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.SubTotal)
                </dd>
                <dt class="col-sm-10">
                    ITBIS
                </dt>
                <dd class="col-sm-2">
                    <text>@((Model.SubTotal * 0.18).ToString("0.00"))</text>
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.Total)
                </dd>
            </dl>
        </div>

        <div class="card-footer" style="background-color:#E8E8E8">
            <form asp-action="Details">
                <div class="row">
                    <div class="col-sm-4">
                        <input type="hidden" asp-for="Codigo" />
                    </div>
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-4 text-end">
                        <a asp-action="Index" type="button" class="btn" style="background-color:white;color:red;"><i class="fas fa-times"></i>&nbsp;Cerrar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>