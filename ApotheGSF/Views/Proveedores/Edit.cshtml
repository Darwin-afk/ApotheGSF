@model ApotheGSF.Models.Proveedores

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-7">
        <div class="card">
            <div class="card-header text-center" style="background-color: #7F0099;">
                <h3 class="display-8" style="color:white;"><i class="fas fa-flask"></i>&nbsp;Modificar Laboratorio</h3>
            </div>
            <!--datos-->
            <div class="card-body">
                <!--Nombre-->
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Nombre:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre">
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">RNC:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            </div>
                            <input type="text" asp-for="RNC" class="form-control" placeholder="RNC">
                        </div>
                        <span asp-validation-for="RNC" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Telefono_1:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                            </div>
                            <input type="tel" class="form-control" asp-for="Telefono1" placeholder="___-____-____">
                        </div>
                        <span asp-validation-for="Telefono1" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">Telefono_2:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                            </div>
                            <input type="tel" class="form-control" asp-for="Telefono2" placeholder="___-____-____">
                        </div>
                        <span asp-validation-for="Telefono2" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Fax:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-print"></i></span>
                            </div>
                            <input type="text" asp-for="Fax" class="form-control" placeholder="Fax">
                        </div>
                        <span asp-validation-for="Fax" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">Dirección:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-address-book"></i></span>
                            </div>
                            <input type="text" asp-for="Direccion" class="form-control" placeholder="Dirección">
                        </div>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Email:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Example@Something.com">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">Terminos de Pago:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
                            </div>
                            <select asp-for="TerminosdePago" class="form-control">
                                <option value="Efectivo">Efectivo</option>
                                <option value="Credito">Credito</option>
                            </select>
                        </div>
                        <span asp-validation-for="TerminosdePago" class="text-danger"></span>
                    </div>
                </div>
                <!--Fin datos-->
            </div>
            <div class="card-footer text-center" style="background-color: #7F0099 ;">
                <!--Botones-->
                <input type="hidden" asp-for="Codigo" />
                <button class="btn" type="submit" style="background-color:white;color:#008F00;"><i class="fas fa-save"></i>&nbsp;Actualizar</button>
                <a class="btn" asp-controller="Home" style="background-color:white;color:red;" asp-action="Index" type="button"><i class="fas fa-times"></i>&nbsp;Cancelar</a>
                <!--Fin Botones-->
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
