@model ApotheGSF.ViewModels.MedicamentosViewModel

@{
	ViewData["Title"] = "Create";
}

<div class="form-group row">
	<div class="form-group col-sm-10">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-8">
                <div class="card">
                    <div class="card-header text-center" style="background-color:#009900;">
                        <h3 class="display-8" style="color:white;">Create Medicamento</h3>
                    </div>
                    <!--datos-->
                    <div class="card-body">

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Nombre:</label>
                                <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre">
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Proveedores:</label>
                                <div asp-nombres="@ViewBag.NombresProveedores" asp-valores="@ViewBag.CodigosProveedores" asp-valores-seleccionados=null asp-id=ProveedoresId></div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Categoria:</label>
                                <input type="text" asp-for="Categoria" class="form-control" placeholder="Categoria">
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Sustancia:</label>
                                <input class="form-control" asp-for="Sustancia" type="text" placeholder="Sustancia">
                            </div>  
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Concentración:</label>
                                <input class="form-control" asp-for="Concentracion" type="text" placeholder="0 mg">
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Unidades por Caja:</label>
                                <input class="form-control" asp-for="UnidadesCaja" type="text" placeholder="0 mg">
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Costo:</label>
                                <input class="form-control" asp-for="Costo" type="text" placeholder="0.00 $">
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Precio por Unidad:</label>
                                <input class="form-control" asp-for="PrecioUnidad" type="text" placeholder="0.00 $">
                            </div>
                        </div>


                        <div class="form-group row">                            
                            <div class="col-sm-6">
                                <label class="col-form-label">Indicaciones</label>
                                <textarea class="form-control" asp-for="Indicaciones" type="textarea" placeholder="Indicaciones" rows="3"></textarea>
                            </div>
                            <div class="col-sm-6">
                                <label for="Direccion" class="col-form-label">Dosis</label>
                                <input class="form-control" asp-for="Dosis" type="text" placeholder="0">
                            </div>
                        </div>


                        <!--Fin datos-->
                    </div>
                    <div class="card-footer text-center" style="background-color:#009900 ;">
                        <!--Botones-->
                        <button class="btn btn-secondary" type="button">Nuevo</button>
                        <button class="btn btn-primary" value="Create" type="submit">Guardar</button>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Index" type="button">Cerrar</a>
                        <!--Fin Botones-->
                    </div>
                </div>
            </div>
		</form>
	</div>
	<div class="col-sm-2">
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
