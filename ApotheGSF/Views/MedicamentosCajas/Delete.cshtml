@model ApotheGSF.ViewModels.MedicamentosCajasViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3 class="text-center"><i class="fas fa-pills"></i>&nbsp;Eliminar MedicamentoCaja&nbsp<i class="fas fa-pills"></i></h3>

<div class="container shadow-lg p-3 rb-5 bg-light rounded col-md-6">
    <div class="card">
        <div class="card-header text-center" style="background-color:#E8E8E8">
            <h3>Esta seguro que desea eliminar esta Caja</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    Nombre
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombreMedicamento)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CantidadUnidad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CantidadUnidad)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaAdquirido)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaAdquirido)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaVencimiento)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaVencimiento)
                </dd>
                @*
                <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Detallada)
                </dt>
                <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Detallada)
                </dd>*@
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <div class="row">
                    <div class="col-sm-4">
                        <input type="hidden" asp-for="CodigoCaja" />
                    </div>
                    <div class="col-sm-4 text-center">
                        <button onclick="Confirmar()" type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i>&nbsp;Eliminar</button>
                        @*@Html.ActionLink("Eliminar", "Delete", new {id = Model.CodigoCaja}, new {onclick = "return confirm('Esta seguro que desea eliminarlo?');"})*@
                    </div>
                    <div class="col-sm-4 text-end">
                        <a href="@Url.Action("Details", "Medicamentos", new { id = Model.CodigoMedicamento})" type="button" class="btn" style="background-color:white;color:red;"><i class="fas fa-times"></i>&nbsp;Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        function Confirmar() {
            if (confirm("Esta seguro que desea eliminarlo?")) {
                var codigo = document.getElementById("CodigoCaja").value;

                $.ajax({
                    data: {id: codigo },
                    type: "POST",
                    url: "/MedicamentosCajas/Delete",
                    success: function(response) {
                        window.location.href = "/Medicamentos/Details/" + response;
                    },
                });
            }
        }
    </script>
    }
