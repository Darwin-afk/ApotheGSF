                        </div>
                    }
                </div>
                <ul class="navbar-nav ml-auto">
                    @*<li class="nav-item dropdown drop1 dropstart">
                    <a class="nav-link" href="#" data-toggle="dropdown">
                    <i class="fas fa-bell"></i>
                    <span class="badge badge-danger navbar-badge">@Notificaciones.Mensajes.Count</span>
                    </a>
