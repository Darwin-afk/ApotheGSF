                                        <i class="fa-solid fa-list-check"></i>&nbsp;
                                        Registros
                                    </a>
                                    <ul class="dropdown-menu menu1" aria-labelledby="navbarDropdownMenuLink">
                                        @if (User.IsInRole("Administrador"))
