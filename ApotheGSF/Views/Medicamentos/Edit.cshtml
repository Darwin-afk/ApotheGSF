@model ApotheGSF.ViewModels.MedicamentosViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="form-group row">
    <div class="form-group col-sm-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-8">
                <div class="card">
                    <div class="card-header text-center" style="background-color:#00CC66;">
                        <h3 class="display-8" style="color:white;"><i class="fa-solid fa-capsules"></i>&nbsp;Modificar Medicamento</h3>
                    </div>
                    <!--datos-->
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Nombre:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Proveedores:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-flask"></i></span>
                                    </div>
                                    <div>
                                        <select asp-for="ProveedoresId" class="form-control select2" asp-items="ViewBag.ProveedoresId"></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Categoria:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                    </div>
                                    <input type="text" asp-for="Categoria" class="form-control" placeholder="Categoria">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Sustancia:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-prescription-bottle"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="Sustancia" type="text" placeholder="Sustancia">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Concentración:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-pills"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="Concentracion" type="text" placeholder="0 mg">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Unidades por Caja:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-tablets"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="UnidadesCaja" type="text" placeholder="0">
                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Costo:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="Costo" type="text" placeholder="0.00 $">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Precio por Unidad:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="PrecioUnidad" type="text" placeholder="0.00 $">
                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Indicaciones</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-list"></i></span>
                                    </div>
                                    <textarea class="form-control" asp-for="Indicaciones" type="textarea" placeholder="Indicaciones" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="Direccion" class="col-form-label">Dosis</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-exclamation-circle"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="Dosis" type="text" placeholder="0">
                                </div>
                            </div>
                        </div>
                        <!--Fin datos-->
                    </div>
                    <div class="card-footer text-center" style="background-color:#00CC66 ;">
                        <input type="hidden" asp-for="Codigo"></input>
                        <!--Botones-->
                        <button class="btn" type="submit" style="background-color:#008F00;color:white;"><i class="fas fa-save"></i>&nbsp;Moficar</button>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Index" type="button"><i class="fas fa-times"></i>&nbsp;Cerrar</a>
                        <!--Fin Botones-->
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-2">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
