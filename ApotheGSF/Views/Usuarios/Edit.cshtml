@model ApotheGSF.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="form-group row">
	<div class="form-group col-sm-10">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="container shadow-lg p-3 rb-5 bg-white rounded col-md-8">
				<div class="card">
					<div class="card-header text-center" style="background-color:#006699 ;">
						<h3 class="display-8" style="color:white;"><i class="fas fa-user"></i>&nbsp;Modificar Usuario</h3>
					</div>
					<!--datos-->
					<div class="card-body">
						<div class="form-group row">
                            <div class="col-sm-6">
                                <label for="Nombre" class="col-form-label">Nombre:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="Apellido" class="col-form-label">Appellido:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" asp-for="Apellido" class="form-control" placeholder="Apellido">
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="Telefono" class="col-form-label">Teléfono:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                                    </div>
                                    <input type="tel" asp-for="Telefono" class="form-control" placeholder="___-____-____">
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="Cedula" class="col-form-label">Cédula:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-id-card"></i></span>
                                    </div>
                                    <input type="text" asp-for="Cedula" class="form-control" placeholder="___-_______-_">
                                    <span asp-validation-for="Cedula" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="FechaNacimiento" class="col-form-label">Fecha de Nacimiento:</label>
                                <div class="input-group prepend">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                    <input type="date" asp-for="FechaNacimiento" class="form-control datetimepicker-input">
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="Direccion" class="col-form-label">Dirección:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-address-book"></i></span>
                                    </div>
                                    <input type="text" asp-for="Direccion" class="form-control" placeholder="Dirección">
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="Email" class="col-form-label">Email:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="Email" type="email" placeholder="Example@Something.com">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="NombreUsuario" class="col-form-label">Nombre de Usuario:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input class="form-control" asp-for="Usuario" type="text" placeholder="Nombre Usuario">
                                    <span asp-validation-for="Usuario" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label class="col-form-label" for="Roles">Rol:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <select class="form-control" asp-for="Rol">
                                        <option selected disabled>Seleccione un Rol</option>
                                        <option value="Administrador">Administrador</option>
                                        <option value="Comprador">Comprador</option>
                                        <option value="Vendedor">Vendedor</option>
                                    </select>
                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
						<!--Fin datos-->
					</div>
					<div class="card-footer text-center" style="background-color:#006699 ;">
						<!--Botones-->
                        <input type="hidden" asp-for="Codigo" />
						<button class="btn" value="Save" type="submit" style="background-color:white;color:#008F00;"><i class="fas fa-save"></i>&nbsp;Actualizar</button>
						<a class="btn" style="background-color:white;color:red;" asp-controller="Usuarios" asp-action="Index" type="button"><i class="fas fa-times"></i>&nbsp;Cancelar</a>
						<!--Fin Botones-->
					</div>
				</div>
			</div>
		</form>
	</div>
	<div class="col-sm-2">
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
